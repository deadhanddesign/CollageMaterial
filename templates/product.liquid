{% assign current_variant = product.selected_or_first_available_variant %}
{% comment %} <div class="underlay-color"></div> {% endcomment %}

{% render 'component-header', overline: product.type, title: product.title, subheader-vendor: product.vendor %}

{%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
{{
  featured_image
  | image_url: width: 1200
  | image_tag: class: 'tile tile--medium', id: 'theme-image', loading: 'eager'
}}

{% form 'product', product, class: 'tile tile--highlight' %}
  {% if product.metafields.custom.quick_description %}
    <div class="body--large">{{ product.metafields.custom.quick_description }}</div>
  {% endif %}

  {%- unless product.has_only_default_variant or product.options_with_values.size < 1 -%}
    {%- for option in product.options_with_values -%}
      <div class="label--medium">{{ option.name | escape }}</div>

      <div class="button-container product-highlight__options">
        {%- for variant in product.variants -%}
          {% if variant == current_variant %}
            <md-filled-tonal-button type="button" selected style="pointer-events: none">
              {{- variant.title | escape -}}
            </md-filled-tonal-button>
          {% else %}
            <md-outlined-button
              {% if variant.available == false %}
                disabled
              {% endif %}
              {% if variant.available %}
                href="{{ variant.url }}"
              {% endif %}
            >
              {{- variant.title | escape -}}
            </md-outlined-button>
          {% endif %}
        {%- endfor -%}
      </div>
    {%- endfor -%}
  {%- endunless -%}

  <input type="hidden" name="id" value="{{ current_variant.id }}">
  <div class="product-highlight__price-container">
    <md-outlined-text-field
      label="Qty"
      aria-label="Quantity"
      type="number"
      value="1"
      name="quantity"
    ></md-outlined-text-field>
    <div class="display--medium">{{ current_variant.price | money }}</div>
  </div>
  <div class="product-highlight__button-container">
    <md-filled-button type="submit" id="add-to-cart-button">Add to Cart</md-filled-button>
    <md-filled-button trailing-icon id="gpay-button">
      Buy with
