<div
  {% if tile-type == 'large' %}
    class="tile tile--large"
  {% elsif tile-type == 'medium' %}
    class="tile tile--medium"
  {% elsif tile-type == 'small' %}
    class="tile tile--small"
  {% elsif tile-type == 'featured' %}
    class="tile tile--large tile--featured"
  {% else %}
    class="tile"
  {% endif %}
>
  <div
    {% if tile-type == 'featured' %}
      class="tile__track--featured"
    {% else %}
      class="tile__track"
    {% endif %}
  >
    {{ tile-content }}
  </div>
</div>

{% style %}
  .tile {
    /* width: 100%; */
    /* width: clamp(20ch, 100%, 1900px); */
    /* width: minmax(20ch, 1900px); */
    padding: var(--spacing-padding-xlarge);
    overflow: clip;
  }

  .tile--large {
    /* width: min(100%, 1900px); */
    min-width: calc(100% - (var(--spacing-padding-large) * 2));
    max-width: 1900px;
  }

  .tile--medium {
    /* width: min(100%, 1900px); */
    min-width: 50%;
    max-width: 1900px;
  }

  .tile--small {
    /* width: min(100%, 1900px); */
    min-width: none;
    max-width: 1900px;
  }

  .tile--featured {
    background: var(--md-sys-color-surface);
    color: var(--md-sys-color-on-background);
    font: var(--md-sys-typescale-body-medium);
    padding: 0;
  }

  .tile__track {
    position: sticky;
    top: 0;
    align-self: flex-start;
    margin: 0 auto;
  }

  .tile__track--featured {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-gap-small);
  }
{% endstyle %}
