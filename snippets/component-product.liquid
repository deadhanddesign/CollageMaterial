{% comment %}
  Requires:
      -type: {Object} - 'collection', 'search', or `blog`. Determines which filter to render.

  Example:
      {% render 'component-collection', type: blog %}
{% endcomment %}
{% capture tile-content %}

    <div class="component-collection-container">
      {% render 'component-collection-filter', type: type %}
      {% render 'component-collection-list', type: type %}
    </div>

{% endcapture %}

{% render 'component-tile', tile-type: 'featured', tile-content: {{tile-content}} %}

{% style %}
  .component-collection-container {
    position: relative;
    display: flex;
    align-items: stretch;
    gap: var(--spacing-gap-small);
  }

  @container (max-width: 1000px) {
    .component-collection-container {
      flex-direction: column;
    }
  }
{% endstyle %}
