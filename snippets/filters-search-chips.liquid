<md-chip-set aria-label="Input chips">
  {%- if search.terms -%}
    <md-input-chip
      class="chip"
      label="Search: {{ search.terms | escape }}"
      href="{{ search.url }}?sort_by={{ search.sort_by }}"
    >
    </md-input-chip>
  {%- endif -%}
  {%- for filter in search.filters -%}
    {%- if filter.type == 'price_range' -%}
      {%- if filter.min_value.value != null or filter.max_value.value != null -%}
        <md-input-chip
          class="chip"
          label="
            {{ filter.label }}:
            {% assign min_value = filter.min_value.value | default: 0 -%}
            {%- assign max_value = filter.max_value.value | default: filter.range_max -%}
            {{ min_value | money }} - {{ max_value | money }}
          "
          href="{{ filter.url_to_remove }}"
        >
        </md-input-chip>
      {%- endif -%}
    {%- else -%}
      {%- for filter_value in filter.active_values -%}
        <md-input-chip
          class="chip"
          label="{{ filter.label }}: {{ filter_value.label }}"
          href="{{ filter_value.url_to_remove }}"
        >
        </md-input-chip>
      {%- endfor -%}
    {%- endif -%}
  {%- endfor -%}
</md-chip-set>

<script type="module">
  const Ai = document.querySelectorAll('.chip');
  Ai.length > 0 &&
    Ai.forEach((e) => {
      e.addEventListener('remove', (e) => e.preventDefault());
    });
</script>
