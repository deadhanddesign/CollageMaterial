{% comment %}
  Requires:
      -product: {Object} product object.

  Usage:
      {% for foo in collection.products %}
        {% render 'product-card', product: foo %}
      {% endfor %}
{% endcomment %}

{% assign product = product | default: product %}

{% form 'product', product, id: {{product.id}}, class: 'card' %}
  <input type="hidden" min="1" type="number" id="quantity" name="quantity" value="1">
  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
  {{ product | image_url: width: 1200 | image_tag: loading: 'lazy' }}
  <div class="card__content">
    <h3>{{ product.title }}</h3>
    <h4>{{ product.vendor }}</h4>
    <md-divider></md-divider>
    <div class="card__navigation">
      <div class="price">{{ product.price | money }}</div>
      <md-filled-icon-button
        aria-label="add to cart"
        type="submit"
        name="add"
        id="add-to-cart-button-{{ product.id }}"
      >
        <md-icon>add_shopping_cart</md-icon>
      </md-filled-icon-button>
      <md-filled-button href="{{ product.url }}">View</md-filled-button>
    </div>
  </div>
{% endform %}

{% stylesheet %}
  h3 {
    font-size: 3rem;
  }
{% endstylesheet %}
