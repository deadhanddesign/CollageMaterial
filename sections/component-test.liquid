{
  "name": "Headline 2 Test",
  "class": "headline-2",
  "tag": "header",
  "settings": [
    {
      "type": "text",
      "id": "h2-content",
      "label": "Headline Content"
    },
    {
      "type": "select",
      "id": "h2-size",
      "label": "Headline Size",
      "options": [
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
