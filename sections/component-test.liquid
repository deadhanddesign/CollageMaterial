        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Headline 2 Test",
      "category": "Things",
      "settings": {
