{% assign content = section.settings['h2-content'] %}

{% case section.settings['h2-size'] %}
  {% when 'h2' %}
    <h2>
  {% when 'h3' %}
    <h3>
  {% when 'h4' %}
    <h4>
  {% when 'h5' %}
    <h5>
  {% when 'h6' %}
    <h6>
  {% else %}
    <p>
{% endcase %}
Test test this is a {{ content }}
{% case section.settings['h2-size'] %}
  {% when 'h2' %}
    </h2>
  {% when 'h3' %}
    </h3>
  {% when 'h4' %}
    </h4>
  {% when 'h5' %}
    </h5>
  {% when 'h6' %}
    </h6>
  {% else %}
    </p>
{% endcase %}

{% stylesheet %}
  .headline-2:has(> h2) {
    color: red;
  }
  .headline-2:has(> h3) {
    color: blue;
  }
  .headline-2:has(> h4) {
    color: green;
  }
  .headline-2:has(> h5) {
    color: yellow;
  }
  .headline-2:has(> h6) {
    color: orange;
  }
{% endstylesheet %}

