{% stylesheet %}
  .home-hero {
    gap: var(--spacing-gap-medium);
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    justify-self: stretch;
    width: min(100dvw, 1920px);
  }

  .home-hero__tile {
    display: grid;
    grid-template-rows: 75% 1fr;
    align-items: stretch;
    justify-items: stretch;
    /* display: flex; */
    /* flex-direction: column; */
    /* justify-content: flex-start; */
    background: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    position: relative;
    border-radius: var(--border-radius-xlarge);
    overflow: clip;
    width: min(30dvw, 640px);
    /* height: calc(100dvh - (var(--spacing-gap-medium) * 2)); */
    height: 90dvh;
    flex: 1 1 auto;
    padding: 0;
    transition: all 300ms ease-out;
  }

  .home-hero__tile:hover {
    width: min(50dvw, 1280px);
  }

  .home-hero__image {
    width: auto;
    height: auto;
    /* height: 100%; */
    /* height: calc(100dvh - (var(--spacing-gap-medium) * 2)); */
    object-fit: cover;
    object-position: center;
    border-radius: var(--border-radius-xlarge);
    transition: all 250ms ease-out;
    /* flex: 1 1 auto; */
  }

  .home-hero__info-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding: var(--spacing-padding-medium);
    gap: var(--spacing-gap-xxsmall);

    & h2 {
      margin-block-start: 0;
    }

    & .home-hero__button-wrapper {
      display: flex;
      justify-content: flex-end;
      gap: var(--spacing-gap-xsmall);
    }
  }

  .home-hero__location {
    display: flex;
    flex-direction: column;
    margin-inline: auto;
  }

  .home-hero__logo-wrapper {
    --logo-size: 200px;
    --negative-margin: calc(((var(--logo-size) * -1) - var(--spacing-gap-medium)) / 2);
    display: flex;
    height: var(--logo-size);
    width: var(--logo-size);
    background: var(--md-sys-color-surface);
    border-radius: 50%;
    place-self: center;
    margin-inline-start: var(--negative-margin);
    margin-inline-end: var(--negative-margin);
    z-index: 20;
    outline: var(--cs-blue) solid 0.2rem;
    outline-offset: -0.4rem;
    justify-content: center;
    align-items: center;
  }

  .home-hero__logo {
    --relative-size: 90%;
    height: var(--relative-size);
    width: var(--relative-size);
    fill: var(--cs-blue);
    transform: translateX(-2%);
  }
{% endstylesheet %}

