<a href="{{ block.settings.large_link_url }}" class="large_link">
  <h2 class="display--medium">{{ block.settings.large_link_text }}</h2>
</a>

{% stylesheet %}
  .large_link {
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Large Link",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "large_link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "large_link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Large Link"
    }
  ]
}
{% endschema %}
